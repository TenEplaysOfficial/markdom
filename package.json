    "markdown-renderer",
    "markdown-utils"
  ],
  "homepage": "https://github.com/TenEplaysOfficial/markdom#readme",
  "bugs": {
    "url": "https://github.com/TenEplaysOfficial/markdom/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TenEplaysOfficial/markdom.git"
  },
  "funding": {
    "type": "individual",
    "url": "https://www.patreon.com/teneplays"
  },
  "license": "MIT",
  "author": "Sriman",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "markdom": "./dist/cli.js"
